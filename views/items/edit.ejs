<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 class="h1TextCenter">Edit <%= item.name %></h1>
		<div class="divFormWidthMargin">
			<form action="/items/<%= item._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= item.name %>" name="item[name]">			
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= item.price%>" name="item[price]" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= item.image%>" name="item[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= item.description %>" name="item[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/items">View Items</a>
		</div>
		
	</div>
</div>
<% include ../partials/footer %>
